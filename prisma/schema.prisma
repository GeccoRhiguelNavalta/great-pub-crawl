// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  name     String?
  pubs     Pub[]    @relation("pubsByUser")
  Review   Review[]
}

model Pub {
  id                   String   @id @default(cuid())
  name                 String           
  overall_food_rating  Int?
  overall_drink_rating Int?
  overall_rating       Int?
  visitors             User[]   @relation("pubsByUser")
  reviews              Review[] @relation("reviewsByPub")
}

model Review {
  id       String @id @default(cuid())
  content  String
  food_rating  Int
  drink_rating Int
  rating   Int
  pub      Pub    @relation("reviewsByPub", fields: [pubId], references: [id])
  pubId    String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String
}
